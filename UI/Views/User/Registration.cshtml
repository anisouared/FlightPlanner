@model UI.ViewModels.UserRegisterViewModel

<div class="row">
    <div class="col-xs-12 col-lg-12">
        <h4 class="text-muted2">Vous n'avez pas encore de compte ?</h4>
            @using (Html.BeginForm())
            {
                <hr class="colorgraph">

                <div class="form-group">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input-lg", @placeholder="Login", @tabindex="4" })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-lg", @placeholder="Adresse E-mail", @tabindex="3" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", @placeholder="Mot de passe", tabindex="5" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            @Html.PasswordFor(model => model.PasswordConfirmation, new { @class = "form-control input-lg", @placeholder="Confirmation du mot de passe", @tabindex="6" })
                            @Html.ValidationMessageFor(model => model.PasswordConfirmation)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-12"><input type="submit" value="S'enregistrer" class="btn btn-lg btn-success" tabindex="10"></div>
                </div>
            }                           
    </div>
</div>